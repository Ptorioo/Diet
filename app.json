{
  "name": "diet-sad",
  "description": "",
  "env": {
    "NODE_ENV": "production",
    "APP_API_URL": "http://backend:3001"
  },
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-docker"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-1x",
      "command": "docker run -p 3000:3000 frontend"
    },
    "worker": {
      "quantity": 1,
      "size": "standard-1x",
      "command": "docker run backend"
    }
  }
}